{
  // Server Configuration
  
  // Data refresh interval in seconds
  "refresh_interval": 5,
  
  // Server host to bind to (0.0.0.0 allows external connections, 127.0.0.1 for localhost only)
  "host": "0.0.0.0",
  
  // Server port number
  "port": 31030,

  // UI Configuration
  // Base font size in pixels for the interface
  "font_size": 12,
  
  // Number of project cards to display per row (on desktop screens)
  "cards_per_row": 3,
  
  // Project card dimensions and spacing
  "card_size": {
    "min_width": "200px",   // Minimum card width
    "max_width": "320px",   // Maximum card width
    "padding": "15px",      // Internal padding within each card
    "gap": "15px"           // Space between cards
  },
  
  // Page background color (any valid CSS color)
  "background_color": "#666666",
  
  // Header background image (can be a relative path like "static/images/image.jpg" or a full URL)
  // Leave empty ("") for no background image
  "header_background_image": "static/images/robert-lukeman.webp",
  
  // Header text color for title and timestamp (any valid CSS color)
  "header_text_color": "#DDDDDD",
  
  // Build Status Colors
  // Colors for different build statuses (any valid CSS color: hex, rgb, color names, etc.)
  "colors": {
    "success": "#4CAF50",     // Successful builds (green)
    "failure": "#f44336",     // Failed builds (red)
    "exception": "#ff9800",   // Builds with exceptions (orange)
    "unknown": "#9e9e9e",     // Unknown status (gray)
    "building": "#2196F3"     // Currently building (blue)
  },

  // The subpath where the application is deployed (e.g., "/ci_status" for http://localhost/ci_status)
  // Use "/" for root deployment
  // NOt very important, but it's used to set the base path for the application
  "application_root": "/ci_status"
}

